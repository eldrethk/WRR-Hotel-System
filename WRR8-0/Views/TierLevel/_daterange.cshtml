@model TierLevelViewModel


<form asp-action="PackageCreate" asp-controller="TierLevel" method="post">
    <div class="modal-header">
        <h2 class="modal-title text-primary form-padding-left">Package Tier Level</h2>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="form-horizontal modal-body">
        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
        <input type="hidden" asp-for="@Model.SelectedID" />
        <h3>@Model.SelectedName</h3>
        <div class="form-group">
            <label asp-for=@Model.StartDate class="control-label col-md-4"></label>
            <div class="col-md-10">
                <input asp-for="@Model.StartDate" class="form-control" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EndDate" class="control-label col-md-4"></label>
            <div class="col-md-10">
                <input asp-for="@Model.EndDate" class="form-control" />
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TierLevel" class="control-label col-md-4"></label>
            <div class="col-md-10">
               <select asp-for="@Model.TierLevel" class="custom-select">
                   <option value="A">A</option>
                   <option value="B">B</option>
                   <option value="C">C</option>
               </select>
                <span asp-validation-for="@Model.TierLevel" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</form>
